def git_clone(){
    echo "Cloning: ${env.GIT_BRANCH}"
    git url: 'https://github.com/martynigg/sandbox.git',
        branch: ${env.GIT_BRANCH}
}

pipeline {
    agent none
    stages {
        stage('Build and Test'){
            parallel {
                stage('Build and Test on Ubuntu'){
                    agent { label 'ubuntu-18.04-build' }
                    steps {
                        git_clone()
                    }
                }
            }
        }
    }
}
